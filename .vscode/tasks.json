{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Java Project",
      "type": "shell",
      "command": "mvn clean package -DskipTests"
    },
    {
      "label": "Run MySQL+Zookeeper",
      "type": "shell",
      "command": "docker compose -f .devcontainer/docker-compose-dev.yml up -d mysql zookeeper"
    },
    {
      "label": "Build + Run MySQL+Zookeeper",
      "type": "shell",
      "command": "echo Build + Run MySQL+Zookeeper",
      "dependsOn": ["Build Java Project", "Run MySQL+Zookeeper"]
    },
    {
      "label": "Run Test Environment",
      "type": "shell",
      "command": "docker compose -f docker-compose-test.yml up",
      "dependsOn": ["Build Java Project"]
    }
  ]
}
